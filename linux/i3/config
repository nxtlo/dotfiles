exec --no-startup-id feh --bg-scale ~/Downloads/new-love-date-4k-ts-2560x1080.jpg
exec --no-startup-id picom &
exec --no-startup-id ~/.scripts/feh-blur -b 12 -D 0
exec --no-startup-id flashfocus
